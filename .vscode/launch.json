  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/dist"
    },
    {
      "name": "Launch Edge tests",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8080/tests",
      "webRoot": "${workspaceFolder}/dist",
      "sourceMaps": true,
    },
    {
      "name": "Launch Edge showcase",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8080/showcase",
      "webRoot": "${workspaceFolder}/dist",
      "sourceMaps": true,
    },
  ]
}
